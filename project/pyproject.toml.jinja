[build-system]
requires = ["poetry>=0.12"]
build-backend = "poetry.masonry.api"

[tool.poetry]
name = "[[ python_package_distribution_name ]]"
version = "0.1.0"
description = "[[ project_description ]]"
authors = ["[[ author_fullname ]] <[[ author_email ]]>"]
license = "[[ copyright_license ]]"
readme = "README.md"
repository = "https://[[ repository_provider ]]/[[ repository_namespace ]]/[[ repository_name ]]"
homepage = "https://[[ repository_provider ]]/[[ repository_namespace ]]/[[ repository_name ]]"
keywords = []
packages = [ { include = "[[ python_package_import_name ]]", from = "src" } ]
include = [
    "README.md",
    "pyproject.toml"
]

[tool.poetry.dependencies]
python = "^3.6"

coverage = { version = "^5.0.4", optional = true }
invoke = { version = "^1.4.1", optional = true }
mypy = { version = "^0.770", optional = true }
pytest = { version = "^4.3", optional = true }
pytest-sugar = { version = "^0.9.2", optional = true }
pytest-xdist = { version = "^1.26", optional = true }

[tool.poetry.extras]
tests = ["coverage", "invoke", "mypy", "pytest", "pytest-randomly", "pytest-sugar", "pytest-xdist"]

[tool.poetry.dev-dependencies]
autoflake = "^1.3.1"
black = "^19.10b0"
coverage = "^5.0.4"
failprint = "^0.3.0"
flakehell = "^0.6.0"
flake8-black = "^0.2.1"
flake8-builtins = "^1.5.3"
flake8-tidy-imports = "^4.1.0"
flake8-variables-names = "^0.0.3"
flake8-pytest-style = "^1.3.0"
git-changelog = "^0.4.0"
httpx = "^0.13.3"
invoke = "^1.4.1"
ipython = "^7.2"
isort = { version = "^4.3", extras = ["pyproject"] }
jinja2-cli = "^0.7.0"
mkdocs = "^1.1"
mkdocs-material = ">=4.5, <6.0"
mkdocstrings = "^0.11.2"
mypy = "^0.770"
pytest = "^4.3"
pytest-cov = "^2.8"
pytest-randomly = "^3.4.1"
pytest-sugar = "^0.9.2"
pytest-xdist = "^1.26"
toml = "^0.10.0"
wemake-python-styleguide = "^0.14.1"
wrapt = "^1.12.1"

[tool.poetry.scripts]
[[ python_package_command_line_name ]] = "[[ python_package_import_name ]].cli:main"

[tool.black]
line-length = 120

[tool.isort]
line_length = 120
not_skip = "__init__.py"
multi_line_output = 3
force_single_line = false
balanced_wrapping = true
default_section = "THIRDPARTY"
known_first_party = "[[ python_package_import_name ]]"
include_trailing_comma = true

[tool.flakehell]
format = "colored"
max_line_length = 132
show_source = false

[tool.flakehell.plugins]
"*" = [
    "+*",
    "-A001",  # redundant with W0622 (builtin override), which is more precise about line number
    "-S101",  # use of assert
    "-D105",  # missing docstring in magic method
    "-D212",  # multi-line docstring summary should start at the first line
    "-E203",  # whitespace before ‘:’ (incompatible with Black)
    "-W503",  # line break before binary operator (incompatible with Black)
    "-Q000",  # black already deals with quoting
    "-C0301",  # line too long
    "-C0116",  # redunant with D102 (missing docstring)
    "-R0913",  # too many methods
    "-R0903",  # too few public methods
    "-WPS305",  # f-strings
    "-WPS410",  # __variables__ (__all__...)
    "-WPS421",  # builtin functions (print...)
    "-WPS326",  # implicit string concatenation
    "-WPS336",  # explicit string concatenation
]
flake8-rst-docstrings = ["-*"]
